{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ENV_FILE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "watch": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
